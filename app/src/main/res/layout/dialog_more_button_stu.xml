<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/dialog_round_back">

    <TextView
        android:id="@+id/stu_dialog_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="课程名称"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/stu_dialog_course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="课程码"/>
        <TextView
            android:id="@+id/stu_dialog_copy_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="7dp"
            android:text="复制课程码"
            android:textSize="14sp"
            android:textColor="@color/blue"/>
    </RelativeLayout>
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/login_input_text"/>
    <TextView
        android:id="@+id/exit_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="退出课程"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/red"/>

</LinearLayout>