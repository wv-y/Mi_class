<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_back"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_round_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_round_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="发布签到"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="签到主题:"
                    android:gravity="center"/>

                <EditText
                    android:layout_marginEnd="5dp"
                    android:id="@+id/qiandao_name"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="签到时长:"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/qiandao_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_down" />
                <Spinner
                    android:id="@+id/qiandao_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="35dp"
                android:paddingBottom="20dp"
                android:gravity="center" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数字码签到"
                        android:textSize="20sp"
                        android:textColor="@color/black"></TextView>

                    <ImageView
                        android:id="@+id/numeric_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/select_student_or_teacher">
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二维码签到"
                        android:textSize="20sp"
                        android:textColor="@color/black" />
                    <ImageView
                        android:id="@+id/qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/select_student_or_teacher">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/qiandao_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/but_bg"
                android:text="确认"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/change_course_cha"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cha"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>
