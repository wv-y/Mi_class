<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/back"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/linearlayout_back"
            android:layout_height="200dp">

        <com.minminaya.widget.GeneralRoundFrameLayout
                android:id="@+id/portrait"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:corner_radius="60dp"
                android:layout_gravity="center"
                android:background="@drawable/portrait_1"
                android:layout_marginStart="30dp">
            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_corner_frame"/>


        </com.minminaya.widget.GeneralRoundFrameLayout>


        <LinearLayout
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_name"
                    android:text="姓名"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_character"
                    android:text="学生"
                    android:textSize="15sp"
                    android:textColor="#0099ff"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/linearlayout_back"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/edit"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="50dp">
            <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/ic_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="修改信息"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"/>

        </LinearLayout>


        <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/feedback"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="50dp">
            <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/ic_feedback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="意见反馈"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"/>

        </LinearLayout>


        <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="50dp">
            <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/ic_info"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            <TextView

                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="开发信息"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="25dp"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <TextView
            android:background="@drawable/linearlayout_back"
            android:id="@+id/exit_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出登录"
            android:textSize="20sp"
            android:textColor="#ED0909"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>