<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_back"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_round_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_round_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="修改课程信息"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/change_course_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_back"
                android:hint="课程名称"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="#34000000"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/change_course_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/edit_back"
                    android:layout_alignParentTop="true"
                    android:hint="课程简介"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#34000000"
                    android:textSize="20sp"
                    android:gravity="start|top" />
                <TextView
                    android:id="@+id/change_course_introduce_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/300"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:layout_alignBottom="@+id/change_course_introduce"
                    android:layout_alignRight="@+id/change_course_introduce"/>
            </RelativeLayout>

            <Button
                android:id="@+id/change_course_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/but_bg"
                android:text="确认"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/change_course_cha"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cha"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>
