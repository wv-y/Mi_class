<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="3dp">

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/chat_right_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/vector_drawable_teacher"
            />
        <LinearLayout
            android:id="@+id/linear_layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/chat_right_img"
            android:background="@drawable/chat_right_bg"
            android:padding="0dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/chat_right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="w w w w  ww w w  w 我我我我我我 我我我ww 我我我我我我 w  我"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="10dp"
                />
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:text="2020-10-7 20:40:36"/>
</LinearLayout>