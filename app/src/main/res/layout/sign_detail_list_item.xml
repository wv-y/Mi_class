<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/member_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/vector_drawable_teacher"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_toEndOf="@+id/member_image"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/member_name"
            android:maxEms="6"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/member_id"
            android:maxEms="13"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="15sp"
            android:textColor="@color/login_input_text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/member_style"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="（签到状态）"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>

    <Button
        android:id="@+id/set_sign"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:text="修改"
        android:background="@drawable/round_corner_button"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/login_input_text"/>
</RelativeLayout>