<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".activity.UserInfoActivity">

    <LinearLayout 
            android:orientation="vertical"
            android:layout_width="match_parent" 
            android:layout_height="220dp">
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/select_image"
                android:layout_width="120dp"
                android:padding="@dimen/dp_10"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="请左右滑动切换头像"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="用户名:"
                    android:gravity="center"/>

            <EditText
                    android:id="@+id/edit_username"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="性别:"
                    android:gravity="center"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <RadioButton
                            android:layout_marginStart="20dp"
                            android:background="@drawable/radio_button_selector"
                            android:id="@+id/boy"
                            style="@style/select_style"
                            android:text="男" />

                    <RadioButton
                            android:layout_marginStart="20dp"
                            android:id="@+id/girl"
                            android:background="@drawable/radio_button_selector"
                            style="@style/select_style"
                            android:text="女" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="学校:"
                    android:gravity="center"/>

            <Button
                    android:textAlignment="viewStart"
                    android:paddingEnd="10dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/edit_school"
                    android:layout_width="match_parent"
                    android:text="北京信息科技大学"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_down"
                    android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="学号:"
                    android:gravity="center"/>

            <EditText
                    android:inputType="number"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/edit_id"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
                android:visibility="gone"
                android:id="@+id/l_department"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="部门:"
                    android:gravity="center"/>

            <EditText
                    android:inputType="number"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/edit_department"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

<com.minminaya.widget.GeneralRoundFrameLayout
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:corner_radius="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0099ff"
            android:text="保存"
            android:textSize="20sp"
            android:textColor="@color/white"/>
</com.minminaya.widget.GeneralRoundFrameLayout>


</LinearLayout>