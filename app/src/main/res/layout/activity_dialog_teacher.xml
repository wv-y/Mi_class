<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_back"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_round_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_round_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="申报课程"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/insert_course_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_back"
                android:hint="请创建课程名称"
                android:inputType="text"
                android:maxLength="6"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="#34000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/insert_course_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_back"
                android:hint="课程介绍"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textColorHint="#34000000"
                android:textSize="20sp"
                android:gravity="start|top"/>

            <Button
                android:id="@+id/tea_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/but_bg"
                android:text="确认"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/tea_dialog_cha"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cha"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>