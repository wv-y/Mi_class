<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".activity.AnnouncementActivity">

    <ListView
        android:id="@+id/announcement_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:dividerHeight="15dp"
        android:layout_margin="15dp"
        android:scrollbars="none">

    </ListView>

    <TextView
        android:id="@+id/ann_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无公告"
        android:gravity="center"
        android:textColor="@color/login_input_text"
        android:textSize="20sp"
        android:visibility="gone"/>

    <com.gigamole.library.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_shadow_angle="45"
        app:sl_shadow_color="@color/login_input_text"
        app:sl_shadow_distance="3dp"
        app:sl_shadow_radius="2dp"
        app:sl_shadowed="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp">

        <ImageView
            android:id="@+id/add_ann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_add"
            />

    </com.gigamole.library.ShadowLayout>

</RelativeLayout>